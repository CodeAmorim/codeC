#include <stdio.h>

void mostrar(char *p, int l, int c){
	int i, j;
	for(i = 0; i < l; i++){
		for(j = 0; j < c; j++){
			printf("%c", *p);
			p++;
		}
		printf("\n");
	}
}

char *colar (char *f1, int l1, int c1, char *f2, int l2, int c2){
	char *f3 = (char*)malloc(sizeof(char) * l1 * l2);
	int i, j;
	for(i = 0; i < l1; i++){
		for(j = 0; j < c1; j++)
			if(i < l2 && j < c2){
				*f3 = *f2; 
				f2++;
				f3++;
				f1++;
			}else{
				*f3 = *f1;
				f3++;
				f1++;
			}
	}
	f3 = f3 - (l1 * c1);
	return f3;
}


int main (){
	char foto1[10][10];
	char foto2[3][3];
	int i;
	char *p = &foto1[0][0];
	
	for(i = 0; i < 100; i++){
		*p = 'A';
		p++;
	}

	for(i = 0, p = foto2; i < 9; i++, p++)
		*p = 'B';
		
	mostrar(&foto1[0][0], 10, 10);
	mostrar(&foto2[0][0], 3, 3);
	colar(foto1, 10, 10, foto2, 3, 3);
	mostrar(p, 10, 10);
}
